{
  "name": "asset-pc-vue3",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "test": "vite build --mode test",
    "build": "vite build --mode production"
  },
  "dependencies": {
    "vue": "^3.0.0-rc.1",
    "vue-router": "^4.0.0-beta.11",
    "vuex": "^4.0.0-beta.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@vue/compiler-sfc": "^3.0.0-rc.1",
    "husky": "^4.3.0",
    "less": "^3.12.2",
    "less-loader": "^7.0.1",
    "lint-staged": "^10.4.0",
    "typescript": "^4.0.3",
    "vite": "^1.0.0-rc.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.vue": [
      "eslint",
      "git add"
    ]
  }
}
